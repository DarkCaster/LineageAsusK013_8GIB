typeattribute surfaceflinger_tmpfs mlstrustedobject;

allow adbd surfaceflinger_tmpfs:file { read write };
allow { appdomain -isolated_app } surfaceflinger_tmpfs:file { read write };
allow mediacodec surfaceflinger_tmpfs:file { read write };
allow system_server surfaceflinger_tmpfs:file { read write };
